{
  "datafeed_id": "$CLUSTER_NAME.datafeed-inbound_service_bytes_anomaly",
  "job_id": "$CLUSTER_NAME.inbound_service_bytes_anomaly",
  "query_delay": "5m",
  "indices": [
    "tigera_secure_ee_flows.$CLUSTER_NAME.*"
  ],
  "query": {
    "match_all": {
      "boost": 1
    }
  },
  "script_fields": {
    "namespace_dest_name_aggr": {
      "script": {
        "lang": "painless",
        "source": "doc['dest_namespace'].value + '/' + doc['dest_name_aggr'].value"
      }
    }
  },
  "scroll_size": 1000,
  "chunking_config": {
    "mode": "auto"
  }
}
