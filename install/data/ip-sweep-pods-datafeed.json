{
  "datafeed_id": "$CLUSTER_NAME.datafeed-ip_sweep_pods",
  "job_id": "$CLUSTER_NAME.ip_sweep_pods",
  "query_delay": "5m",
  "indices": [
    "tigera_secure_ee_flows.$CLUSTER_NAME.*"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {"source_name": "-"}
        }
      ]
    }
  },
  "script_fields": {
    "namespace_source_name_aggr": {
      "script": {
        "lang": "painless",
        "source": "doc['source_namespace'].value + '/' + doc['source_name_aggr'].value"
      }
    }
  },
  "scroll_size": 1000,
  "chunking_config": {
    "mode": "auto"
  }
}
