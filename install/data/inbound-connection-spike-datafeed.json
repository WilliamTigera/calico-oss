{
  "datafeed_id": "$CLUSTER_NAME.datafeed-inbound_connection_spike",
  "job_id": "$CLUSTER_NAME.inbound_connection_spike",
  "query_delay": "5m",
  "indices": [
    "tigera_secure_ee_flows.$CLUSTER_NAME.*"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "bool": {
            "filter": [
              { "term": { "dest_namespace": "kube-system" } },
              {
                "regexp": {
                  "dest_name_aggr": {
                      "value": "coredns-.*"
                  }
                }
              }
            ]
          }
        }
      ]
    }
  },
  "script_fields": {
    "namespace_dest_name_aggr": {
      "script": {
        "lang": "painless",
        "source": "doc['dest_namespace'].value + '/' + doc['dest_name_aggr'].value"
      }
    }
  },
  "scroll_size": 1000,
  "chunking_config": {
    "mode": "auto"
  }
}
