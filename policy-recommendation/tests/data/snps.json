[
  {
    "metadata": {
      "name":      "namespace1",
      "namespace": "namespace1"
    },
    "spec": {
      "stagedaction": "Learn",
      "tier":  "policy-recommendation-tier",
      "order": 1000,
      "egress": 
        [
          {
            "action": "Allow"
          }
        ],
      "ingress": 
      [
        {
          "action": "Allow"
        }
      ],
      "selector": "namespace == namespace1",
      "types": 
      [
        "Egress",
        "Ingress"
      ]
    }
  }
]
